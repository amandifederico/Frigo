<p id="notice"><%= notice %></p>

<h1>Sub Product Details</h1>

<table>
  <thead>
    <tr>
      <th>Sub product</th>
      <th>Sub product type</th>
      <th>Weight</th>
      <th>Weight control</th>
      <th>Observation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_product_details.each do |sub_product_detail| %>
      <tr>
        <td><%= sub_product_detail.sub_product %></td>
        <td><%= sub_product_detail.sub_product_type %></td>
        <td><%= sub_product_detail.weight %></td>
        <td><%= sub_product_detail.weight_control %></td>
        <td><%= sub_product_detail.observation %></td>
        <td><%= link_to 'Show', sub_product_detail %></td>
        <td><%= link_to 'Edit', edit_sub_product_detail_path(sub_product_detail) %></td>
        <td><%= link_to 'Destroy', sub_product_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

