<div class="col-sm-6">  
  <%= form_for(turn) do |f| %>
    <% if turn.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(turn.errors.count, "error") %> prohibited this turn from being saved:</h2>

        <ul>
        <% turn.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group  row">
      <div class="input-group date datepicker col-sm-6">
        <%= f.text_field :date, placeholder: "Fecha", class: "form-control" %>
          <span class="input-group-addon ">
            <%= fa_icon "list"%>
          </span>
      </div>
    </div>

    <div class="form-group">
          <%= f.text_field :description, class: "form-control input-lg", placeholder: "Descripcion"%>
    </div>


    <div class="actions">
        <%= f.submit class: "btn btn-outline-success btn-block"%>
    </div>
  <% end %>
</div>