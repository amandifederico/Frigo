<p id="notice"><%= notice %></p>

<h1>Animales</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Animal type</th>
      <th>Average value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.description %></td>
        <td><%= animal.animal_type %></td>
        <td><%= animal.average_value %></td>
        <td>
          <%= link_to (fa_icon "eye"), animal, class: 'btn btn-sm btn-success' %>
          <%= link_to (fa_icon "pencil-square-o"), edit_animal_path(animal), class: 'btn btn-sm btn-warning' %>
          <%= link_to (fa_icon "trash-o"), animal, method: :delete, data: { confirm: 'Â¿Seguro desea eliminar este registro?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

