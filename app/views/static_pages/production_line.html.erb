<h1>Producción</h1>

<table class="datatable table-striped table-bordered table-list">
  <thead>
    <tr>
      <th>Tropa</th>
      <th>Descripción</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.lot.dte %></td>
        <td><%= product.description %></td>
        <td>
          <%= link_to (fa_icon "eye"), product, class: 'btn btn-sm btn-success' %>
          <%= link_to (fa_icon "pencil-square-o"), new_product_detail_path(:prod => product.id), class: 'btn btn-sm btn-warning' %>
          <%= link_to (fa_icon "trash-o"), product, method: :delete, data: { confirm: '¿Seguro desea eliminar este registro?' }, class: 'btn btn-sm btn-danger' %>
              
        </td>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>