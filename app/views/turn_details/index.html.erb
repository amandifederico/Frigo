<p id="notice"><%= notice %></p>

<h1>Turn Details</h1>

<table>
  <thead>
    <tr>
      <th>Turn</th>
      <th>Agent</th>
      <th>Place</th>
      <th>Position</th>
      <th>Observation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @turn_details.each do |turn_detail| %>
      <tr>
        <td><%= turn_detail.turn %></td>
        <td><%= turn_detail.agent %></td>
        <td><%= turn_detail.place %></td>
        <td><%= turn_detail.position %></td>
        <td><%= turn_detail.observation %></td>
        <td><%= link_to 'Show', turn_detail %></td>
        <td><%= link_to 'Edit', edit_turn_detail_path(turn_detail) %></td>
        <td><%= link_to 'Destroy', turn_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

