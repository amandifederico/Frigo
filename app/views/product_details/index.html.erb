<p id="notice"><%= notice %></p>

<h1>Product Details</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Weight</th>
      <th>Weight control</th>
      <th>Observation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_details.each do |product_detail| %>
      <tr>
        <td><%= product_detail.product %></td>
        <td><%= product_detail.weight %></td>
        <td><%= product_detail.weight_control %></td>
        <td><%= product_detail.observation %></td>
        <td><%= link_to 'Show', product_detail %></td>
        <td><%= link_to 'Edit', edit_product_detail_path(product_detail) %></td>
        <td><%= link_to 'Destroy', product_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

