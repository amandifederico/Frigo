<div class="col-sm-10">  
  <%= form_for(lot) do |f| %>
    <% if lot.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(lot.errors.count, "error") %> prohibited this lot from being saved:</h2>

        <ul>
        <% lot.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.text_field :dte, class: "form-control input-lg", placeholder: "D.T.E"%>
    </div>

    <div class="form-group">
      <%= f.number_field :troop_number, class: "form-control input-lg", placeholder: "NÂº de Tropa"%>
    </div>

    <div class="form-group  row">
      <div class="input-group date datepicker col-sm-4">
        <%= f.text_field :cargo_date, placeholder: "Fecha cargo", class: "form-control" %>
          <span class="input-group-addon ">
            <%= fa_icon "list"%>
          </span>
      </div>
    </div>

    <div class="form-group  row">
      <div class="input-group date datepicker col-sm-4">
        <%= f.text_field :expiration_date, placeholder: "Fecha vencimiento", class: "form-control" %>
          <span class="input-group-addon ">
            <%= fa_icon "list"%>
          </span>
      </div>
    </div>

    <div class="form-group">
      <%= f.collection_select :producer_id, Producer.all, :id, :to_s, {prompt: "Abastecedor"}, {class: "select2"} %>
    </div>

    <div class="form-group">
      <%= f.collection_select :turn_id, Turn.all, :id, :to_s, {prompt: "Turno"}, {class: "select2"} %>
    </div>

    <div class="form-group">
      <%= f.collection_select :transport_id, Transport.all, :id, :to_s, {prompt: "Transporte"}, {class: "select2"} %>
    </div>

    <div class="form-group">
      <%= f.text_field :seal_number, class: "form-control input-lg", placeholder: "Nro precinto"%>
    </div>

    <div class="form-group">
      <%= f.number_field :liveweight, class: "form-control input-lg", placeholder: "Peso vivo"%>
    </div>

    <div class="form-group">
      <%= f.number_field :quantity_control, class: "form-control input-lg", placeholder: "Control de cantidad"%>
    </div>

    <div class="form-group">
      <%= f.text_field :close_code, class: "form-control input-lg", placeholder: "Codigo Cierre"%>
    </div>

    <table class="table table-striped table-bordered table-list">
      <thead>
        <tr>
          <th>Animal</th>
          <th>Cantidad</th>
          <th>Observacion</th>
        </tr> 
      </thead>
      <tbody class="lot_details">
        <%= f.fields_for :lot_details do |ld| %>
              <%= render 'lot_detail_fields', :f => ld %>
        <% end %>
      </tbody>
    </table>

    <center>
      <div class='links'>
        <%= link_to_add_association (fa_icon "plus"), f, :lot_details, data: { association_insertion_node: '.lot_details', association_insertion_method: :append }, class: "btn btn-outline-primary btn-xs"  %>
      </div>
    </center>
    <br>
    <div class="actions">
        <%= f.submit class: "btn btn-outline-success btn-block"%>
    </div>
  <% end %>
</div>

